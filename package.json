{
  "name": "memecourt-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for MemeCourt voting system on MemeCore blockchain",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "deploy": "forge script script/Deploy.s.sol:DeployMemeCourt --rpc-url $MEMECORE_RPC --broadcast --verify",
    "deploy:local": "forge script script/Deploy.s.sol:DeployMemeCourt --rpc-url http://localhost:8545 --broadcast",
    "deploy:js": "node deploy.js",
    "verify": "forge verify-contract $VOTING_CONTRACT_ADDRESS src/MemeCourtVoting.sol:MemeCourtVoting --chain-id $CHAIN_ID",
    "demo": "forge script script/Interactions.s.sol:MemeCourtInteractions --rpc-url $MEMECORE_RPC --broadcast",
    "format": "forge fmt",
    "lint": "forge fmt --check",
    "clean": "forge clean"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "voting",
    "memecore",
    "blockchain",
    "web3"
  ],
  "author": "MemeCourt Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/memecourt-contracts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^6.16.0"
  }
}
